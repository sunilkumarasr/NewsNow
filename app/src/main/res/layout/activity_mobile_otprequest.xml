<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify_your_account"
        android:textSize="18sp"
        android:textColor="@color/app_black_color"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_below="@+id/tv_instruction"
        android:id="@+id/phone_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indian_code"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:textColor="@color/app_black_color"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@color/app_black_color"
            android:textColorHint="@color/app_gray_color"
            android:fontFamily="@font/poppins_regular"
            android:background="@android:color/transparent"
            android:paddingStart="4dp"
            android:textSize="18sp"
            tools:ignore="Autofill,RtlSymmetry" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/phone_input_container"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray_color"
        app:layout_constraintTop_toBottomOf="@id/phone_input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:visibility="gone"
        android:layout_below="@+id/view"
        android:id="@+id/tv_resend_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resend_otp"
        android:textSize="18sp"
        android:gravity="end"
        android:paddingEnd="8dp"
        android:textColor="@color/app_black_color"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />
    <Button
        android:visibility="gone"
        android:layout_below="@+id/view"
        android:id="@+id/btn_get_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_otp"
        android:background="@drawable/overlay_button"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/phone_input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_marginTop="80dp"
        android:visibility="gone"
        android:layout_below="@+id/btn_get_otp"
        android:id="@+id/enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_otp"
        android:textSize="18sp"
        android:gravity="start"
        android:paddingEnd="8dp"
        android:textColor="@color/app_black_color"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <com.chaos.view.PinView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/enter_otp"
        android:id="@+id/pinview"
        style="@style/PinWidget.PinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:itemBackground="@color/app_main_color"
        app:hideLineWhenFilled="false"
        android:textColor="@color/white"
        app:itemCount="6"
        app:itemHeight="50dp"
        app:itemRadius="10dp"
        app:itemWidth="50dp"
         />
    <Button
        android:visibility="gone"
        android:layout_below="@+id/pinview"
        android:id="@+id/btn_submit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_otp"
        android:background="@drawable/overlay_button"
        android:layout_marginTop="48dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_get_otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</RelativeLayout>