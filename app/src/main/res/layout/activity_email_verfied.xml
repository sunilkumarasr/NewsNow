<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Logins.ResetPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:paddingBottom="150dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:paddingTop="20dp"
            android:id="@+id/back"
            android:drawableStart="@drawable/back_arrow_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:paddingStart="20dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/verified"
            android:paddingTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/check_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="20dp"
            android:id="@+id/main_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Verified!"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/verified" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_white_card"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your email address has been successfully verified"
            android:textColor="@color/app_gray_color"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/resend_layout"
            app:layout_constraintTop_toBottomOf="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/et_background"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv_verification_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cpixelstudios@gmail.com"
                android:textSize="14sp"
                android:textColor="@color/app_gray_color"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Continue to Dashboard"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/overlay_button"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/resend_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>