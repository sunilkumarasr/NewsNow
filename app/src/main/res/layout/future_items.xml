<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="290dp"
    android:layout_height="230dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/trending_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:visibility="gone"
                android:id="@+id/video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="@drawable/home_video_text_background"
                android:drawablePadding="15dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/item_view_trending_tag_text_size"
                app:drawableLeftCompat="@drawable/play_small_icon"
                tools:ignore="RelativeOverlap" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="bottom"
            android:maxLines="2"
            android:text="@string/title_content"
            android:textColor="@color/app_black_color"
            android:textSize="14sp"
            android:includeFontPadding="false"
            tools:ignore="RelativeOverlap"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/catagery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/app_gray_color"
                android:textSize="11sp"
                android:includeFontPadding="false"
                tools:ignore="RelativeOverlap"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="@color/text_header"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:text="@string/time"
                android:singleLine="true"
                android:textColor="@color/text_header"
                android:textSize="11sp"
                app:drawableStartCompat="@drawable/clock_icon"
                android:includeFontPadding="false"
                tools:ignore="RelativeOverlap"/>

            <TextView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="start"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:text="@string/comments"
                android:singleLine="true"
                android:drawableTint="@color/text_header"
                android:textColor="@color/text_header"
                android:textSize="11sp"
                app:drawableStartCompat="@drawable/comments_icon"
                android:includeFontPadding="false"
                tools:ignore="RelativeOverlap"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>