<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    tools:context=".view.Activitys.Menu.ManualLocationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_marginStart="15dp"
            app:tint="@color/black"
            android:src="@drawable/back_arrow_white"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Search your location"
            android:includeFontPadding="false" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_box_gray"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp">
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_centerVertical="true"
           android:layout_gravity="center_vertical"
           android:src="@drawable/search_gray_icon"
           app:tint="@color/app_main_color"/>
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/autoCity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="45dp"
            android:hint="Search"
            android:singleLine="true"
            android:textColorHint="@color/text_header"
            android:textColor="@color/text_header"
            android:textSize="15sp"
            android:background="@null"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/useLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/use_my_location"
            app:tint="@color/app_main_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/use_my_current_location"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/app_black_color"
            android:includeFontPadding="false" />
    </LinearLayout>


</LinearLayout>