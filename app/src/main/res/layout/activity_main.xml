<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".view.MainActivity">
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/app_icon"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:src="@drawable/menu_icon"
                tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/location"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:drawablePadding="5dp"
            android:textColor="@color/app_gray_color"
            app:drawableLeftCompat="@drawable/add_icon"
            app:drawableTint="@color/app_gray_color"
            tools:ignore="RelativeOverlap" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_marginTop="60dp"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:menu="@menu/news_menu"
        app:elevation="0dp"
        android:background="@color/app_gray_color"
        android:clipChildren="false"
        app:itemIconTint="@color/bottom_navigation_color_selector"
        android:scrollIndicators="left"/>

</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        app:headerLayout="@layout/nav_custom_content" />
</androidx.drawerlayout.widget.DrawerLayout>