<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.Logins.CreateAccountActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">
    <ImageView
        android:id="@+id/artical_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_icon"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow_white"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/save_button"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/saved_artical"
        tools:ignore="ContentDescription" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:animateLayoutChanges="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="70dp"
        android:backgroundTintMode="screen"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/card"
        android:paddingBottom="60dp"
        app:cardPreventCornerOverlap="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/artical_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="22sp"
                android:gravity="start"
                android:textColor="@color/app_main_color"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/artical_desription"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="start"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:maxLines="8"
                android:ellipsize="end"
                android:textColor="@color/app_gray_color"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/artical_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="@dimen/item_view_tag_text_size"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_gray_color"
                app:drawableStartCompat="@drawable/clock_icon"
                android:drawablePadding="5dp"
                tools:ignore="RelativeOverlap,SpUsage" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/item_view_tag_text_size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    app:drawableStartCompat="@drawable/like"
                    android:drawablePadding="5dp"
                    android:textColor="@color/app_black_color"
                    tools:ignore="RelativeOverlap,SpUsage" />

                <TextView
                    android:id="@+id/dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/item_view_tag_text_size"
                    android:maxLines="12"
                    android:ellipsize="end"
                    android:textColor="@color/app_black_color"
                    app:drawableStartCompat="@drawable/dislike"
                    android:drawablePadding="5dp"
                    tools:ignore="RelativeOverlap,SpUsage" />
                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="@dimen/item_view_tag_text_size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_black_color"
                    app:drawableStartCompat="@drawable/comment"
                    android:drawablePadding="5dp"
                    tools:ignore="RelativeOverlap,SpUsage" />
                <LinearLayout
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UselessLeaf">
                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="@dimen/item_view_tag_text_size"
                        android:gravity="start"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/app_gray_color"
                        tools:ignore="RelativeOverlap,SpUsage" />
                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/download"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>