<resources>

    <style name="Widget.Theme.Newsatnow.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextColor">@color/app_black_color</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Widget.Theme.Newsatnow.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="CardViewRoundedTop" parent="Widget.MaterialComponents.CardView">

        <item name="android:topLeftRadius">16dp</item>
        <item name="android:topRightRadius">16dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item  name="android:bottomRightRadius">0dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/app_gray_color</item>
        <item name="colorControlActivated">@color/app_black_color</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>

        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="TextInputLayoutHint" parent="">
        <item name="android:textColorHint">@color/app_gray_color</item>
        <item name="colorControlActivated">@color/app_black_color</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="TextInputEditText" parent="">
        <item name="android:translationY">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/app_black_color</item>
        <item name="android:textColorHint">@color/app_gray_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:titleMarginTop">15dp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/app_main_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SettingsLink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/app_gray_color</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:drawableEnd">@drawable/next</item>
        <item name="android:drawableTint">@color/app_gray_color</item>
    </style>

    <style name="OrangeButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bg_orange_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:minHeight">0dp</item>
    </style>

</resources>